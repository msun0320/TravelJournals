<% layout('layouts/boilerplate') %>
<h1>All journals!</h1>
<div>
  <a href="/journals/new">Add Journal</a>
</div>
<ul>
  <% for (let journal of journals) {%>
  <div class="card" mb-3>
    <div class="row">
      <div class="col-md-4">
        <img src="<%= journal.image %>" alt="" class="img-fluid" />
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= journal.title %></h5>
          <p class="card-text"><%= journal.text %></p>
          <p class="card-text">
            <small class="text-muted"><%= journal.location %> </small>
          </p>
          <a class="btn btn-primary" href="/journals/<%= journal._id %> "
            >View <%= journal.title %>
          </a>
        </div>
      </div>
    </div>
  </div>
  <% }%>
</ul>
